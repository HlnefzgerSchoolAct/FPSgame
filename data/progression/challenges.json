        "reward": { "xp": 3000, "credits": 500 },
        "weight": 7
      },
      {
        "id": "weekly_killstreak_10",
        "name": "Unstoppable Force",
        "description": "Get a 10 killstreak",
        "requirement": { "type": "killstreak", "streak": 10 },
        "reward": { "xp": 5000, "credits": 1000 },
        "weight": 3
      },
      {
        "id": "weekly_objective_captures_25",
        "name": "Objective Specialist",
        "description": "Capture 25 objectives",
        "requirement": { "type": "objective_captures", "count": 25 },
        "reward": { "xp": 3500, "credits": 700 },
        "weight": 6
      },
      {
        "id": "weekly_top_player_10",
        "name": "MVP",
        "description": "Finish as top player in 10 matches",
        "requirement": { "type": "match_top_player", "count": 10 },
        "reward": { "xp": 4500, "credits": 900 },
        "weight": 4
      },
      {
        "id": "weekly_sniper_kills_40",
        "name": "Overwatch",
        "description": "Get 40 kills with Sniper Rifles",
        "requirement": { "type": "weapon_class_kills", "weapon_class": "sniper", "count": 40 },
        "reward": { "xp": 3000, "credits": 550 },
        "weight": 6
      },
      {
        "id": "weekly_comeback_wins_5",
        "name": "Never Give Up",
        "description": "Win 5 matches after being behind",
        "requirement": { "type": "comeback_wins", "count": 5 },
        "reward": { "xp": 4000, "credits": 800 },
        "weight": 5
      },
      {
        "id": "weekly_perfect_matches_3",
        "name": "Flawless Victory",
        "description": "Win 3 matches with 2.0+ K/D",
        "requirement": { "type": "match_win_kd", "min_kd": 2.0, "count": 3 },
        "reward": { "xp": 4500, "credits": 850 },
        "weight": 4
      },
      {
        "id": "weekly_weapon_level_ups_5",
        "name": "Arsenal Builder",
        "description": "Level up any weapons 5 times",
        "requirement": { "type": "weapon_level_ups", "count": 5 },
        "reward": { "xp": 3000, "credits": 600 },
        "weight": 7
      }
    ]
  },
  "seasonal_challenges": {
    "description": "Long-term challenges that span entire season (8-12 weeks)",
    "challenges": [
      {
        "id": "seasonal_total_kills_2500",
        "name": "Season Warrior",
        "description": "Get 2,500 kills this season",
        "requirement": { "type": "kills", "count": 2500 },
        "reward": { "xp": 10000, "credits": 3000, "cosmetic": "seasonal_calling_card_warrior" }
      },
      {
        "id": "seasonal_all_weapons_level_5",
        "name": "Jack of All Trades",
        "description": "Reach level 5 with all weapon types",
        "requirement": { "type": "all_weapons_min_level", "level": 5 },
        "reward": { "xp": 15000, "credits": 5000, "cosmetic": "seasonal_emblem_versatile" }
      },
      {
        "id": "seasonal_ranked_tier",
        "name": "Competitive Climber",
        "description": "Reach Gold tier in Ranked mode",
        "requirement": { "type": "ranked_tier", "tier": "gold" },
        "reward": { "xp": 12000, "credits": 4000, "cosmetic": "seasonal_title_competitive" }
      },
      {
        "id": "seasonal_win_all_modes",
        "name": "Mode Master",
        "description": "Win 50 matches in each game mode",
        "requirement": { "type": "mode_wins_all", "wins_per_mode": 50 },
        "reward": { "xp": 20000, "credits": 7500, "cosmetic": "seasonal_weapon_skin_elite" }
      }
    ]
  },
  "challenge_rewards_summary": {
    "daily_total_potential": {
      "xp": "1350-2550 per day",
      "credits": "250-450 per day"
    },
    "weekly_total_potential": {
      "xp": "10500-13500 per week",
      "credits": "1850-2650 per week"
    },
    "monthly_impact": {
      "description": "Completing all dailies and weeklies for a month",
      "xp": "~82000",
      "credits": "~17500",
      "equivalent_player_levels": "~8-10 levels"
    }
  },
  "design_notes": {
    "philosophy": "Challenges guide player behavior toward varied gameplay while providing consistent rewards",
    "difficulty_curve": "Daily challenges are achievable in 1-2 hours. Weekly challenges require 8-12 hours of focused play.",
    "variety": "Challenge pool rotates to prevent repetition. Players see new challenges regularly.",
    "reroll_system": "Optional rerolls for credits allow players to skip undesired challenges without feeling forced",
    "f2p_friendly": "All challenges completable without purchases. Credits from challenges enable shop participation.",
    "engagement_targets": [
      "Daily login incentive",
      "Multi-day retention through weekly challenges",
      "Long-term goals via seasonal challenges",
      "Skill variety encouraged through weapon/mode challenges"
    ],
    "references": [
      "Apex Legends daily/weekly challenge system",
      "Call of Duty challenge variety and rewards",
      "Fortnite challenge pacing and engagement"
    ]
  }
}
