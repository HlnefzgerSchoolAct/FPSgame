{
  "$schema": "challenges-schema",
  "version": "1.0.0",
  "description": "Daily and weekly challenges for player engagement and reward loops",
  "daily_challenges": {
    "max_active": 3,
    "refresh_time": "00:00:00 UTC",
    "reroll_cost_credits": 100,
    "challenges": [
      {
        "id": "daily_kills_25",
        "name": "Eliminate 25 Enemies",
        "description": "Get 25 kills in any game mode",
        "requirement": { "type": "kills", "count": 25 },
        "reward": { "xp": 500, "credits": 100 },
        "weight": 10
      },
      {
        "id": "daily_wins_3",
        "name": "Victorious",
        "description": "Win 3 matches",
        "requirement": { "type": "match_wins", "count": 3 },
        "reward": { "xp": 750, "credits": 150 },
        "weight": 8
      },
      {
        "id": "daily_headshots_10",
        "name": "Sharpshooter",
        "description": "Get 10 headshot kills",
        "requirement": { "type": "headshot_kills", "count": 10 },
        "reward": { "xp": 600, "credits": 125 },
        "weight": 7
      },
      {
        "id": "daily_ar_kills_15",
        "name": "Rifle Mastery",
        "description": "Get 15 kills with Assault Rifles",
        "requirement": { "type": "weapon_class_kills", "weapon_class": "assault_rifle", "count": 15 },
        "reward": { "xp": 500, "credits": 100 },
        "weight": 9
      },
      {
        "id": "daily_smg_kills_20",
        "name": "Run and Gun",
        "description": "Get 20 kills with SMGs",
        "requirement": { "type": "weapon_class_kills", "weapon_class": "smg", "count": 20 },
        "reward": { "xp": 500, "credits": 100 },
        "weight": 9
      },
      {
        "id": "daily_objective_time_120",
        "name": "Objective Player",
        "description": "Spend 120 seconds on objectives",
        "requirement": { "type": "objective_time_s", "count": 120, "modes": ["koth", "domination"] },
        "reward": { "xp": 650, "credits": 125 },
        "weight": 6
      },
      {
        "id": "daily_matches_5",
        "name": "Dedicated",
        "description": "Complete 5 matches",
        "requirement": { "type": "match_completions", "count": 5 },
        "reward": { "xp": 800, "credits": 150 },
        "weight": 7
      },
      {
        "id": "daily_assists_10",
        "name": "Team Player",
        "description": "Get 10 assists",
        "requirement": { "type": "assists", "count": 10 },
        "reward": { "xp": 450, "credits": 90 },
        "weight": 8
      },
      {
        "id": "daily_double_kills_5",
        "name": "Double Trouble",
        "description": "Get 5 double kills",
        "requirement": { "type": "multikills", "multikill_type": "double", "count": 5 },
        "reward": { "xp": 700, "credits": 140 },
        "weight": 5
      },
      {
        "id": "daily_shotgun_kills_10",
        "name": "Close Quarters",
        "description": "Get 10 kills with Shotguns",
        "requirement": { "type": "weapon_class_kills", "weapon_class": "shotgun", "count": 10 },
        "reward": { "xp": 500, "credits": 100 },
        "weight": 7
      },
      {
        "id": "daily_longshot_kills_8",
        "name": "Distance Demon",
        "description": "Get 8 longshot kills (40m+)",
        "requirement": { "type": "longshot_kills", "min_distance": 40, "count": 8 },
        "reward": { "xp": 600, "credits": 120 },
        "weight": 5
      },
      {
        "id": "daily_no_deaths_match",
        "name": "Untouchable",
        "description": "Win a match without dying",
        "requirement": { "type": "match_win_no_deaths", "count": 1 },
        "reward": { "xp": 1000, "credits": 200 },
        "weight": 2
      }
    ]
  },
  "weekly_challenges": {
    "max_active": 3,
    "refresh_time": "Monday 00:00:00 UTC",
    "reroll_cost_credits": 250,
    "challenges": [
      {
        "id": "weekly_kills_150",
        "name": "Eliminator",
        "description": "Get 150 kills this week",
        "requirement": { "type": "kills", "count": 150 },
        "reward": { "xp": 3000, "credits": 500 },
        "weight": 10
      },
      {
        "id": "weekly_wins_15",
        "name": "Champion",
        "description": "Win 15 matches this week",
        "requirement": { "type": "match_wins", "count": 15 },
        "reward": { "xp": 4000, "credits": 750 },
        "weight": 8
      },
      {
        "id": "weekly_headshots_50",
        "name": "Precision Expert",
        "description": "Get 50 headshot kills this week",
        "requirement": { "type": "headshot_kills", "count": 50 },
        "reward": { "xp": 3500, "credits": 600 },
        "weight": 7
      },
      {
        "id": "weekly_weapon_master",
        "name": "Weapon Master",
